<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kostify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Search bar hint color-->
        <item name="colorOnSurfaceVariant">@color/SecondaryColor_50</item>
       <!-- <item name="fontFamily">@font/nunito_sans</item>-->
    </style>
    <style name="Theme.Kostify" parent="Base.Theme.Kostify" />

    <style name="ScreenBackground">
        <item name="android:background">@color/ScreenColor</item>
    </style>

    <style name="TextColorSplashScreen">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleFormStyle">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="GreenButtonForm">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputTitleFormStyle">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/SecondaryColor</item>
    </style>

    <style name="BottomNavStyle">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ProfileMenuButtonStyle">
        <item name="android:background">@color/ScreenColor</item>
        <item name="android:textColor">@color/SecondaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:textColorHint">@color/OutlineColor</item>
        <item name="android:backgroundTint">@color/OutlineColor</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>


   
</resources>