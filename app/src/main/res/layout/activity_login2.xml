<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ScreenColor"
    tools:context=".ui.loginRegisterPage.LoginActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:flow_verticalGap="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="191dp">

            <TextView
                android:id="@+id/textView"
                style="@style/TitleFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/title1_login"
                android:textColor="@color/SecondaryColor" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TitleFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title2_login"
                android:textColor="@color/PrimaryColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="253dp">

            <TextView
                android:id="@+id/textView3"
                style="@style/InputTitleFormStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/email_login"
                android:textColor="@color/SecondaryColor" />

          <!--  <EditText
                android:id="@+id/edt_emailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_inputform"
                android:drawableLeft="@drawable/ic_email_outlined"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:hint="Masukkan email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColorHint="#5000554F"
                android:textSize="16sp" />-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomEditTextStyle"
                android:id="@+id/textInputLayout"
                android:backgroundTint="@color/SecondaryColor"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/ic_email_outlined"
                app:startIconTint="@color/SecondaryColor"
                app:endIconMode="clear_text"
                android:layout_height="56dp"
                android:hint="Masukkan email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_emailLogin"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:padding="0dp"
                    android:textColor="@color/SecondaryColor"
                    android:fontFamily="@font/nunito_sans"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="354dp">

            <TextView
                android:id="@+id/textView4"
                style="@style/InputTitleFormStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/katasandi_login" />

        <!--    <EditText
                android:id="@+id/edt_passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_inputform"
                android:drawableLeft="@drawable/ic_lock_outlined"
                android:drawableRight="@drawable/ic_eye_outlined"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:hint="Masukkan kata sandi"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColorHint="#5000554F"
                android:textSize="16sp" />-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/CustomEditTextStyle"
                android:id="@+id/textInputLayout2"
                android:backgroundTint="@color/SecondaryColor"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/ic_lock_outlined"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/SecondaryColor"
                app:passwordToggleDrawable="@drawable/ic_eye_outlined"
                app:startIconTint="@color/SecondaryColor"
                android:layout_height="56dp"
                android:hint="Masukkan password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_passwordLogin"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="@color/SecondaryColor"
                    android:fontFamily="@font/nunito_sans"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="455dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masukLogin"
                style="@style/GreenButtonForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_green"
                android:text="Masuk"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/atau"
                android:textAlignment="center"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_googleLogin"
                style="@style/GreenButtonForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_google"
                android:drawableLeft="@drawable/ic_fillgoogle"
                android:fontFamily="@font/nunito_sans"
                android:paddingHorizontal="80dp"
                android:text="Masuk dengan Google"
                android:textAllCaps="false"
                android:textColor="@color/SecondaryColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="612dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans"
                    android:text="@string/blmakun_login"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_daftarLogin"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="@string/btndaftar_login"
                    android:textColor="@color/PrimaryColor"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lupaLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="@string/btnlupa_login"
                android:textAlignment="center"
                android:textColor="@color/PrimaryColor"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.948"
        app:srcCompat="@drawable/logokostifywithtexthijau70" />

</androidx.constraintlayout.widget.ConstraintLayout>