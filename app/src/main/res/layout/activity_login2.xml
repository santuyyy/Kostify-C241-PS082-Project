<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ScreenColor"
    tools:context=".ui.loginRegisterPage.LoginActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_backbtn_lightgreen"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:flow_verticalGap="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="191dp">

            <TextView
                android:id="@+id/textView"
                style="@style/TitleFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Masuk Pencari"
                android:textColor="@color/SecondaryColor" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TitleFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kos"
                android:textColor="@color/PrimaryColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="253dp">

            <TextView
                android:id="@+id/textView3"
                style="@style/InputTitleFormStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Email"
                android:textColor="@color/SecondaryColor" />

            <EditText
                android:id="@+id/et_emailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_inputform"
                android:drawableLeft="@drawable/ic_email_outlined"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:hint="Masukkan email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColorHint="#5000554F"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="354dp">

            <TextView
                android:id="@+id/textView4"
                style="@style/InputTitleFormStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Kata Sandi" />

            <EditText
                android:id="@+id/et_passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_inputform"
                android:drawableLeft="@drawable/ic_lock_outlined"
                android:drawableRight="@drawable/ic_eye_outlined"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:hint="Masukkan kata sandi"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColorHint="#5000554F"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="455dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_masuk"
                android:text="Masuk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/GreenButtonForm"
                android:background="@drawable/bg_btn_green"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Atau"
                android:textAlignment="center"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_logwithGoogle"
                style="@style/GreenButtonForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_google"
                android:drawableLeft="@drawable/ic_fillgoogle"
                android:fontFamily="@font/nunito_sans"
                android:paddingHorizontal="80dp"
                android:text="Masuk dengan Google"
                android:textAllCaps="false"
                android:textColor="@color/SecondaryColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="612dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Belum punya akun Kostify?"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_linkRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text=" Daftar Sekarang"
                    android:textColor="@color/PrimaryColor"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lupaPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Lupa Password"
                android:textAlignment="center"
                android:textColor="@color/PrimaryColor"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.948"
        app:srcCompat="@drawable/logokostifywithtexthijau70" />

</androidx.constraintlayout.widget.ConstraintLayout>